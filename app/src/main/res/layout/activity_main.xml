<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rooting_status_async"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        tools:text="Async Rooting Status: Checking..." />

    <TextView
        android:id="@+id/rooting_status_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        tools:text="Sync Rooting Status: Checking..." />

    <TextView
        android:id="@+id/debug_tool_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        tools:text="Debug Tool Status: Checking..." />

    <TextView
        android:id="@+id/debuggable_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        tools:text="Debuggable Status: Checking..." />

    <TextView
        android:id="@+id/usb_debugging_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        tools:text="USB Debugging Status: Checking..." />

    <TextView
        android:id="@+id/development_mode_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="Development Mode Status: Checking..." />

</LinearLayout>